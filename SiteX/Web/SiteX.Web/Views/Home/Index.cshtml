@using SiteX.Common
@model SiteX.Web.ViewModels.ShopViewModels.ProductListViewModel

@{
    this.ViewData["Title"] = "Home Page";

}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    @foreach (var product in this.Model.Products)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="Product Picture Missing">

                <div class="card-body">
                    <a title="item" href="https://www.gymshark.com/products/gymshark-pause-zip-up-jacket-maya-blue-ss22" class="btn btn-primary stretched-link">@product.Price лв</a>

                    <p class="card-text">@product.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            @if (product.Categories != null)
                            {
                                foreach (var category in product.Categories)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary">@category.Name</button>

                                }
                            }
                        </div>
                        @if (product.Locations != null)
                        {
                            foreach (var location in product.Locations)
                            {

                                <small class="text-muted">@location.Address</small>

                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    }



</div>