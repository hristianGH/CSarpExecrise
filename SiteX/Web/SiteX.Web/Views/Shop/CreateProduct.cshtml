@model SiteX.Web.ViewModels.ShopViewModels.ProductViewModel
@{
    this.ViewData["Title"] = "Creating Product";
     
}

<form method="post" class=align-content-md-center>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"> </textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

      
        <div class=form-group>
            <label asp-for="Gender"></label>
            <select class="form-control"  asp-for="Gender" asp-items="@ViewBag.Genders" required>
                <option value="" > Select Gender</option>
            </select>
        </div>
        
       
        <div class=form-group>
            <label asp-for="Categories"></label>
            <select class="form-control" asp-for="Categories" asp-items="@ViewBag.Categories" required>
                <option value=""> Select Category</option>
            </select>
        </div>
         

        <input type="submit" class="btn btn-primary" />

</form>
