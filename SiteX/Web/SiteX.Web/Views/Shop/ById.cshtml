@model SiteX.Web.ViewModels.ShopViewModels.BuyingProductViewModel

@{
    this.ViewData["Title"] = $"{@Model.Product.Name}";


}


<div class="row featurette">

    <div class="col-md-7">

        <h2 class="featurette-heading">@Model.Product.Name </h2>

        <button type="button" class="btn btn-primary btn-lg">@Model.Product.Price лв</button>

        <p>Gender: @Model.Product.Gender </p>





        <div id="Categories" class="btn-group">
            <p>Categories: </p>
            @foreach (var category in Model.Product.Categories)
            {
                <a title="item" asp-action="SearchByCategory" asp-route-id="@category.Id" class="btn btn-primary stretched-link">@category.Name</a>
            }

        </div>
        <div id="Description" class=></div>


        <div class=form-group>
            <label asp-for="Size"></label>
            <select class="form-control" asp-for="Size" asp-items="ViewBag.Sizes" required>
                <span asp-validation-for="Size" class="text-danger"></span>
            </select>
        </div>


        <div class=form-group>
            <label asp-for="Color"></label>
            <select class="form-control" asp-for="Color" asp-items="ViewBag.Colors" required>
                <span asp-validation-for="Color" class="text-danger"></span>
            </select>
        </div>
    </div>

    <div class="col-md-5">
        <title>Placeholder</title>


        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@ViewBag.Images" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="@ViewBag.Images" class="d-block w-100" alt="">
                </div>
                <div class="carousel-item">
                    <img src="@ViewBag.Images" class="d-block w-100" alt="">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="myCarousel" data-slide="prev">
                <span class="carousel-control-prev-item" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="myCarousel" data-slide="next">
                <span class="carousel-control-next-item" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </div>
</div>






<div class="accordion" id="DescriptionAC">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Description
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#DescriptionAC">
            <div class="card-body">
                <p>@Model.Product.Description  </p>
            </div>
        </div>
    </div>
</div>