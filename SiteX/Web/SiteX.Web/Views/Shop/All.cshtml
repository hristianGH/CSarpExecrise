@using SiteX.Common
@model SiteX.Web.ViewModels.ShopViewModels.ProductListViewModel

@{
    this.ViewData["Title"] = "Shop";

}

@foreach (var product in this.Model.Products)
{



    <div class="col">
        <div class="card shadow-sm">
            <img src="@product.ImageUrl" class="card-img-top" alt="ProductName">

            <div class="card-body">
                <a title="item" href="https://www.gymshark.com/products/gymshark-pause-zip-up-jacket-maya-blue-ss22" class="btn btn-primary stretched-link">Buy</a>

                <p class="card-text">@product.Name</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">@product.Category.Name?</button>
                    </div>
                    <small class="text-muted">@product.Price</small>
                </div>
            </div>
        </div>
    </div>
}
