@using SiteX.Common
@model SiteX.Web.ViewModels.ShopViewModels.ProductModels.ProductAllViewModel

@{
    this.ViewData["Title"] = "Shop";

}
 
<partial name="_ShopLayout" model="Model.ToSelectList"></partial>
 

<div class="row">


    @foreach (var product in this.Model.Products)
    {
        <div class="media col-md-4">
            <div class="card shadow-sm">
                <img src="@product.ImageUrl"  style="width:350px;height:350px;" class="card-img-top" alt="Product Picture Missing">

                <div class="card-body">
                    <a title="item" asp-action="ById" asp-route-id="@product.Id" class="btn btn-primary stretched-link">@product.Price лв</a>

                    <p class="card-text">@product.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            @if (product.Categories != null)
                            {
                                foreach (var category in product.Categories)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary">@category.Name</button>

                                }
                            }
                        </div>
                        @if (product.Locations != null)
                        {
                            foreach (var location in product.Locations)
                            {

                                <small class="text-muted">@location.Address</small>

                            }
                        }

                    </div>
                </div>
            </div>
        </div>


    }
    </div>
  

    <partial name="_PagingPartial" model="Model" />
